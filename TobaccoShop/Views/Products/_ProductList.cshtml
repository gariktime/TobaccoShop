@model IEnumerable<TobaccoShop.DAL.Entities.Products.Product>

@foreach (var item in Model)
{
    <div class="col-md-2">
        <p>@Html.DisplayFor(modelItem => item.Mark) @Html.DisplayFor(modelItem => item.Model)</p>

        <p>@Html.DisplayFor(modelItem => item.Price) руб.</p>

        @using (Html.BeginForm("AddToCart", "Hookah", FormMethod.Post))
        {
            <input class="btn-success" type="button" value="Купить" />
        }
    </div>
}
