@model IEnumerable<(double, double, double)>

@{ 
    var prices = Model as List<(double, double, double)>;
}


<div id="orderPrices" style="min-width: 310px; height: 400px; margin: 0 auto"></div>


@using (Html.BeginScriptContext())
{
    <script src="https://code.highcharts.com/highcharts.js"></script>
    <script src="https://code.highcharts.com/modules/exporting.js"></script>

    <script type="text/javascript">
        Highcharts.chart('orderPrices', {
            chart: {
                type: 'column'
            },
            title: {
                text: 'Диаграмма стоимости заказов'
            },
            subtitle: {
                text: ''
            },
            xAxis: {
                categories: [
                    'Jan',
                    'Feb',
                    'Mar',
                    'Apr',
                    'May',
                    'Jun',
                    'Jul',
                    'Aug',
                    'Sep',
                    'Oct',
                    'Nov',
                    'Dec'
                ],
                crosshair: true
            },
            yAxis: {
                min: 0,
                title: {
                    text: 'Сумма (руб.)'
                }
            },
            tooltip: {
                headerFormat: '<span style="font-size:10px">{point.key}</span><table>',
                pointFormat: '<tr><td style="color:{series.color};padding:0">{series.name}: </td>' +
                '<td style="padding:0"><b>{point.y:.1f} <span class="glyphicon-rub"></span></b></td></tr>',
                footerFormat: '</table>',
                shared: true,
                useHTML: true
            },
            plotOptions: {
                column: {
                    pointPadding: 0.2,
                    borderWidth: 0
                }
            },
            series: [{
                name: 'Минимальная',
                data: [@prices[0].Item1, @prices[1].Item1, @prices[2].Item1, @prices[3].Item1, @prices[4].Item1, @prices[5].Item1, @prices[6].Item1, @prices[7].Item1, @prices[8].Item1, @prices[9].Item1, @prices[10].Item1, @prices[11].Item1]
            }, {
                name: 'Максимальная',
                data: [@prices[0].Item2, @prices[1].Item2, @prices[2].Item2, @prices[3].Item2, @prices[4].Item2, @prices[5].Item2, @prices[6].Item2, @prices[7].Item2, @prices[8].Item2, @prices[9].Item2, @prices[10].Item2, @prices[11].Item2]
            }, {
                name: 'Средняя',
                data: [@prices[0].Item3, @prices[1].Item3, @prices[2].Item3, @prices[3].Item3, @prices[4].Item3, @prices[5].Item3, @prices[6].Item3, @prices[7].Item3, @prices[8].Item3, @prices[9].Item3, @prices[10].Item3, @prices[11].Item3]
            }]
        });
    </script>
}
