@model IEnumerable<TobaccoShop.BLL.DTO.OrderDTO>

@if(Model == null || Model.Count() == 0)
{
    <h3>Нет заказов</h3>
}
else
{
    <table class="table table-bordered">
        <tr>
            <th>
                @Html.Label("Номер заказа")
            </th>
            <th>
                @Html.Label("Пользователь")
            </th>
            <th>
                @Html.Label("Дата заказа")
            </th>
            <th>
                @Html.Label("Стоимость")
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(item.Number.ToString(), "OrderDetails", new { orderId = item.OrderId })
                </td>
                <td>
                    @Html.ActionLink(item.UserName, "UserDetails", new { userId = item.UserId })
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderPrice) <span class="glyphicon-ruble"></span>
                </td>
            </tr>
        }
    </table>
}
